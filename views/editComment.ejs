<%- include("./partials/header") %>

<%- include("./partials/flash_msgs") %>

<!-- Edit Review/Comment form -->
<div class='container reviewForm'>
	<div class='container'>
		<h2>Edit Comment</h2>
		<hr class="mb-4">
	</div>
	<form action="/order/review/<%= comment._id %>?_method=PUT" method="POST">
	  <div class="form-group">
		<label>Name:</label>
		<input type="text" name='review[name]' class="form-control" value="<%= comment.name %>">
	  </div>
	  <div class="form-group">
		<label>Comment/Review</label>
		<textarea name='review[text]' rows='4' class="form-control"><%= comment.text %></textarea>
	  </div>
	  <div class='d-flex justify-content-between btn-tray'>
		  <a href='/order'><i class="fas fa-chevron-left"></i> Back </a>
		  <button class="btn btn-outline-success form-group">Submit</button>
	  </div>
	</form>
</div>

<%- include("./partials/footer") %>