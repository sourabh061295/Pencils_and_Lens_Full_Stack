<%- include("./partials/header") %>

<%- include("./partials/flash_msgs") %>

<!-- Add Review/Comment form -->
<div class='container reviewForm'>
	<div class='container'>
		<h2>Upload a photo</h2>
		<hr class="mb-4">
	</div>
	<form action="/upload" method="POST">
		<div class="form-group">
			<label>Title:</label>
			<input type="text" name='upload[title]' class="form-control" required>
		</div>
		<div class="form-group">
			<label>Description</label>
			<textarea name='upload[description]' rows='4' class="form-control"></textarea>
		</div>
		<div class="form-group">
			<label>Link:</label>
			<input type="text" name='upload[link]' class="form-control" required>
		</div>
		<label>Photo type: </label>
		<div class="upload_option d-flex justify-content-between">
			<div class="form-check form-check-inline">
				<input class="form-check-input" type="radio" name="upload[type]" id="inlineRadio1" value="sketch" required>
				<label class="form-check-label" for="inlineRadio1">Sketch</label>
			</div>
			<div class="form-check form-check-inline">
				<input class="form-check-input" type="radio" name="upload[type]" id="inlineRadio2" value="photo">
				<label class="form-check-label" for="inlineRadio2">Photo</label>
			</div>
			<div class="form-check form-check-inline">
				<input class="form-check-input" type="radio" name="upload[type]" id="inlineRadio3" value="portrait">
				<label class="form-check-label" for="inlineRadio3">Portrait</label>
			</div>
		</div>
		<div class="form-group">
			<label>Password:</label>
			<input type="password" name='upload[password]' class="form-control" required>
		</div>
	    <div class='d-flex justify-content-between btn-tray'>
		  <a href='javascript:history.back()'><i class="fas fa-chevron-left"></i> Back </a>
		  <button class="btn btn-outline-success form-group">Submit</button>
	    </div>
	</form>
</div>

<%- include("./partials/footer") %>